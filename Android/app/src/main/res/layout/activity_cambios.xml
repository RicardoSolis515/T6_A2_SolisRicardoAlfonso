<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- LABEL: Número de Control -->
    <TextView
        android:id="@+id/lblNumControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número de control:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- INPUT: Número de Control -->
    <EditText
        android:id="@+id/txtNumControl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ej: 18451234"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@id/lblNumControl"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/lblNumControl" />

    <!-- LABEL: Nombre -->
    <TextView
        android:id="@+id/lblNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lblNumControl"
        android:layout_marginTop="20dp" />

    <!-- INPUT: Nombre -->
    <EditText
        android:id="@+id/txtNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre del alumno"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@id/lblNombre"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/lblNombre" />

    <!-- BOTÓN: Buscar -->
    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Buscar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnGuardar"
        app:layout_constraintTop_toBottomOf="@id/txtNombre"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp" />

    <!-- BOTÓN: Guardar Cambios -->
    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Guardar"
        app:layout_constraintStart_toEndOf="@id/btnBuscar"
        app:layout_constraintEnd_toStartOf="@id/btnCancelar"
        app:layout_constraintTop_toTopOf="@id/btnBuscar"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <!-- BOTÓN: Cancelar selección -->
    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cancelar selección"
        app:layout_constraintStart_toEndOf="@id/btnGuardar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnBuscar"
        android:layout_marginStart="8dp" />

    <!-- SECCIÓN: Lista de alumnos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerAlumnos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnBuscar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
