<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityBajas">

    <!-- Label Num Control -->
    <TextView
        android:id="@+id/txt_num_control_label"
        android:layout_width="161dp"
        android:layout_height="44dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Número de control:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- EditText Num Control -->
    <EditText
        android:id="@+id/caja_num_control_bajas"
        android:layout_width="198dp"
        android:layout_height="41dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/txt_num_control_label"
        app:layout_constraintTop_toTopOf="@id/txt_num_control_label" />

    <!-- Label Nombre -->
    <TextView
        android:id="@+id/txt_nombre_label"
        android:layout_width="93dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Nombre:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/caja_num_control_bajas" />

    <!-- EditText Nombre -->
    <EditText
        android:id="@+id/caja_nombre_bajas"
        android:layout_width="194dp"
        android:layout_height="40dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/txt_nombre_label"
        app:layout_constraintTop_toBottomOf="@+id/caja_num_control_bajas" />

    <!-- Botón Buscar -->
    <Button
        android:id="@+id/btn_buscar_bajas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/caja_nombre_bajas"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="60dp"/>

    <!-- Botón Eliminar -->
    <Button
        android:id="@+id/btn_eliminar_bajas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        app:layout_constraintTop_toTopOf="@id/btn_buscar_bajas"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="60dp"/>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_bajas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/btn_buscar_bajas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
